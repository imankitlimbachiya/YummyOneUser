<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_search_home"
    android:backgroundTint="@color/VvDGrey"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:background="@drawable/bg_search_home"
        android:backgroundTint="@color/VvDGrey"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_67sdp"
            android:layout_height="@dimen/_56sdp"
            android:src="@drawable/ic_burger"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/VvDGrey"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/VvDGrey"
            android:orientation="horizontal"
            android:layout_weight="2.5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:background="@color/VvDGrey"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/VvDGrey"
                    android:textColor="@color/Grey"
                    android:text="Christopher Fox"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/LGrey"
                    android:background="@color/VvDGrey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Lorem ipsum dolor sit amet, consectetur"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/VvDGrey"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_49sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/VDGrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/VvDGrey"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/VvDGrey"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:background="@color/VvDGrey"
                            android:layout_alignParentLeft="true"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/LGrey"/>

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/_9sdp"
                            android:background="@color/VvDGrey"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textColor="@color/LGrey"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_order_placed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="@dimen/_12sdp"
                        android:background="@color/VvDGrey"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/LGrey"
                        android:singleLine="true"
                        android:lineSpacingExtra="8sp"
                        android:text="Orders Placed" />

                    <RelativeLayout
                        android:id="@+id/rl_rating"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="@color/VvDGrey"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:layout_alignParentLeft="true"
                            android:textSize="@dimen/_12sdp"
                            android:background="@color/VvDGrey"
                            android:textColor="@color/LGrey"/>

                        <TextView
                            android:id="@+id/tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:background="@color/VvDGrey"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textColor="@color/LGrey"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@color/VDGrey"/>

</LinearLayout>