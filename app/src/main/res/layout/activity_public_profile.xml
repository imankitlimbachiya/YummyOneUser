<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PublicProfileActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/ic_left_arrow"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/profile_pic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/black"
            android:lineSpacingExtra="5sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="Gina Morea" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/txt_username"
            android:src="@drawable/ic_play"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Grey"
                android:lineSpacingExtra="3sp"
                android:text="Followers:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:text="213K" />

            <ImageView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:src="@drawable/ic_dot"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                app:tint="@color/Grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Grey"
                android:lineSpacingExtra="3sp"
                android:text="Likes:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:text="1.3M" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_follow"
                android:layout_width="@dimen/_123sdp"
                android:layout_height="@dimen/_36sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/bg_round"
                android:backgroundTint="@color/Red"
                android:gravity="center"
                android:textColor="@color/white"
                android:lineSpacingExtra="3sp"
                android:text="Follow" />

            <TextView
                android:layout_width="@dimen/_123sdp"
                android:layout_height="@dimen/_36sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/bg_full_edit_border_red"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:text="Message" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/LGrey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profileimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>