<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Activity.SignInActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgForward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_forward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Sign in"
                android:textColor="#000000"
                android:lineSpacingExtra="6sp"
                android:textSize="28sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Enter your mobile number to continue"
                android:textColor="#505050"
                android:lineSpacingExtra="3sp"
                android:textSize="14sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edt"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    app:ccp_countryPreference="gb"
                    app:ccp_defaultPhoneCode="91"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Mobile number"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:paddingLeft="18dp"
                        android:lineSpacingExtra="3sp"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textColorHint="#898989"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtSignIn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
               android:layout_marginTop="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_btn"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:text="Sign In"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lineSpacingExtra="2sp"
                    android:text="Or continue with"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="19dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgGoogle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/ic_facebook" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgTwitter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/ic_twitter" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgFacebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_facebook" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTermPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_marginTop="21dp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginBottom="5dp"
                    android:text="By continuing, you agree to YummyOneâ€™s\nTerms of Service and Privacy Policy"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>