<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SelectCategoryActivity">

    <LinearLayout
        android:id="@+id/li_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_bag_text"
            android:layout_gravity="right" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_search"
        android:text="Select Category"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_20sdp"/>


    <EditText
        android:id="@+id/cv_serch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_search_text"
        android:hint="Search"
        android:gravity="center"
        android:textColorHint="@color/Grey"
        android:textColor="@color/Grey"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_below="@+id/tv_category"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_edt"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cv_serch">
        <LinearLayout
            android:layout_below="@id/cv_serch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_restorant"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_154sdp"
                    android:src="@drawable/ic_restaurant_text"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/img_homemade"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_154sdp"
                    android:src="@drawable/ic_homemade_text"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/img_fastfood"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_154sdp"
                    android:src="@drawable/ic_fastfood_text"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_grocery"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_154sdp"
                    android:src="@drawable/ic_grocery_text"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>