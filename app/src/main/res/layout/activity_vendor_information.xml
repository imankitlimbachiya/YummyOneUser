                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_86sdp"
                    android:layout_height="@dimen/_83sdp"
                    android:src="@drawable/ic_burger"/>
                <LinearLayout
                    android:layout_width="match_parent"
