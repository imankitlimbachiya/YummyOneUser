        android:textSize="25sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt_foodtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_casionopark"
