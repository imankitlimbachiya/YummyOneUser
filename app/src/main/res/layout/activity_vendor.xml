<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VendorActivity">

    <RelativeLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back"
            android:textColor="@color/Grey"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_bag"
            android:src="@drawable/ic_search_text"/>

        <ImageView
            android:id="@+id/img_bag"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_bag_text"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:layout_below="@+id/ll_toolbar"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:lineSpacingExtra="5sp"
        android:text="Casino Park"/>

    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:weightSum="3"
        android:layout_below="@+id/txt_title"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_popular_items"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_28sdp"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:background="@drawable/bg_search_home"
            android:backgroundTint="@color/Red"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:lineSpacingExtra="3sp"
            android:singleLine="true"
            android:gravity="center"
            android:text="Popular Items" />

        <TextView
            android:id="@+id/txt_starters"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_28sdp"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_search_home"
            android:backgroundTint="@color/VvDGrey"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:paddingRight="@dimen/_10sdp"
            android:lineSpacingExtra="3sp"
            android:gravity="center"
            android:text="  Starters  " />

        <TextView
            android:id="@+id/txt_main_course"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_28sdp"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_search_home"
            android:backgroundTint="@color/VvDGrey"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:lineSpacingExtra="3sp"
            android:gravity="center"
            android:text="  Main Course  " />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:background="@color/VvDGrey"
        android:layout_below="@+id/ll_list"
        android:layout_marginTop="@dimen/_5sdp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_55sdp"
        android:layout_below="@+id/view1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ll_titleprice"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_item"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="3sp"
                        android:text="Spaghetti Bolognaise" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Grey"
                        android:lineSpacingExtra="3sp"
                        android:text="$ 15.00" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_item"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_burger"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/img_item"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/VvDGrey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ll_titlepricecs"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_itemcs"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="3sp"
                        android:text="Club Sandwich" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Grey"
                        android:lineSpacingExtra="3sp"
                        android:text="$ 17.00" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_itemcs"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_burger"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/img_itemcs"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/VvDGrey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ll_titlepricesp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_itemsp"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="3sp"
                        android:text="Spaghetti" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Grey"
                        android:lineSpacingExtra="3sp"
                        android:text="$ 12.00" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_itemsp"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_burger"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/img_itemsp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/VvDGrey"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="vertical"
                android:background="@color/VvDGrey">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/LGrey"
                    android:lineSpacingExtra="3sp"
                    android:text="Main Course" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ll_titleprice1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_item1"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="3sp"
                        android:text="Spaghetti Bolognaise" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Grey"
                        android:lineSpacingExtra="3sp"
                        android:text="$ 15.00" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_item1"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_burger"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/img_item1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/VvDGrey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ll_titlepricecs1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_itemcs1"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="3sp"
                        android:text="Club Sandwich" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Grey"
                        android:lineSpacingExtra="3sp"
                        android:text="$ 17.00" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_itemcs1"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_burger"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/img_itemcs1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/VvDGrey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ll_titlepricesp1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_itemsp1"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="3sp"
                        android:text="Spaghetti" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Grey"
                        android:lineSpacingExtra="3sp"
                        android:text="$ 12.00" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_itemsp1"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_burger"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/img_itemsp1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/VvDGrey"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/VlightDGrey"
                android:paddingLeft="@dimen/_15sdp"
                android:textColor="@color/LGrey"
                android:text="Deserts"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@color/VlightDGrey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/img_down"
                    android:textColor="@color/LGrey"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="3sp"
                    android:text="4" />
                <ImageView
                    android:id="@+id/img_down"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:src="@drawable/ccp_down_arrow"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/VvDGrey"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/txt_viewbag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn"
        android:textColor="@color/white"
        android:lineSpacingExtra="4sp"
        android:gravity="center"
        android:text="View Bag" />

</RelativeLayout>