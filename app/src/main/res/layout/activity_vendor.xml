<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VendorActivity">

    <RelativeLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="normal"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black404040"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="-3sp"
            android:gravity="center_horizontal"
            android:text="Home"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_toLeftOf="@+id/img_bag"
            android:src="@drawable/ic_search_text"/>

        <ImageView
            android:id="@+id/img_bag"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_bag_text"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="normal"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/black"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Casino Park"
        android:layout_below="@+id/ll_toolbar"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:weightSum="3"
        android:layout_below="@+id/txt_title"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_popular_items"
            android:layout_width="@dimen/_101sdp"
            android:layout_weight="1"
            android:layout_height="@dimen/_30sdp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            android:lineSpacingExtra="3sp"
            android:text="Popular Items"
            android:background="@drawable/bg_round_fifteen_dp"
            android:backgroundTint="@color/Red"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:singleLine="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_starters"
            android:layout_width="@dimen/_101sdp"
            android:layout_weight="1"
            android:layout_height="@dimen/_30sdp"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/bg_round_fifteen_dp"
            android:backgroundTint="@color/grayebebeb"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:paddingRight="@dimen/_10sdp"
            android:lineSpacingExtra="3sp"
            android:gravity="center"
            android:text="Starters" />

        <TextView
            android:id="@+id/txt_main_course"
            android:layout_width="@dimen/_101sdp"
            android:layout_weight="1"
            android:layout_height="@dimen/_30sdp"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_round_fifteen_dp"
            android:backgroundTint="@color/grayebebeb"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:lineSpacingExtra="3sp"
            android:gravity="center"
            android:text="Main Course" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="@color/grayf8f8f8"
        android:layout_below="@+id/ll_list"
        android:layout_marginTop="@dimen/_7sdp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_55sdp"
        android:layout_below="@+id/view1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="vertical"
                android:background="@color/grayf8f8f8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/graya9a1a1"
                    android:lineSpacingExtra="3sp"
                    android:text="Main Course"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu_main_cource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grayf8f8f8">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/graye1e1e1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/graya9a1a1"
                    android:lineSpacingExtra="21sp"
                    android:text="Deserts"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_20sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:background="@color/VlightDGrey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_14sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/img_down"
                        android:textColor="@color/graya9a1a1"
                        android:layout_centerVertical="true"
                        android:lineSpacingExtra="3sp"
                        android:text="4" />
                    <ImageView
                        android:id="@+id/img_down"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@drawable/ccp_down_arrow"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/graye1e1e1"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/txt_viewbag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:lineSpacingExtra="4sp"
        android:gravity="center"
        android:text="View Bag" />

</RelativeLayout>