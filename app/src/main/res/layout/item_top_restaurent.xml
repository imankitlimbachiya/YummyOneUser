<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_221sdp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/_221sdp"
        android:layout_height="@dimen/_147sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_coupne"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:text="Awesome food"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:text="15 Min away"
        android:layout_marginLeft="@dimen/_6sdp"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/Grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/ic_fav_button"/>

        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_18sdp"
            android:textSize="@dimen/_11sdp"
            android:text=" 4.3 "
            android:gravity="center"
            android:background="@drawable/bg_search_home"
            android:backgroundTint="@color/Orangeoriginal"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_pure_veg"/>
    </LinearLayout>



</LinearLayout>