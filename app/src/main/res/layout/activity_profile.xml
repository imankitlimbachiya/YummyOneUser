<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_arrow"/>

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_menu"
            android:src="@drawable/ic_notifications"/>

        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_round"
            android:textColor="@color/white"
            android:text="12"
            android:gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/img_menu"
            android:backgroundTint="@color/Red"/>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_line"/>

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/profile_pic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/black"
            android:lineSpacingExtra="5sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="Gina Morea" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Grey"
                android:lineSpacingExtra="3sp"
                android:text="Followers:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:text="213K" />

            <ImageView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:src="@drawable/ic_dot"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                app:tint="@color/Grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Grey"
                android:lineSpacingExtra="3sp"
                android:text="Likes:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:text="1.3M" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_123sdp"
                android:layout_height="@dimen/_36sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/bg_round"
                android:backgroundTint="@color/Red"
                android:gravity="center"
                android:textColor="@color/white"
                android:lineSpacingExtra="3sp"
                android:text="Follow" />

            <TextView
                android:layout_width="@dimen/_123sdp"
                android:layout_height="@dimen/_36sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/bg_full_edit_border_red"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:text="Message" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Red"
                android:lineSpacingExtra="3sp"
                android:layout_gravity="center_horizontal"
                android:text="Post" />

            <View
                android:id="@+id/view_post"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/Red"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_my_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Grey"
                android:lineSpacingExtra="3sp"
                android:layout_gravity="center_horizontal"
                android:text="My Orders" />

            <View
                android:id="@+id/view_myorders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/LGrey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profileimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>