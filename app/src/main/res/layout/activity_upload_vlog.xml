<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UploadVlogActivity">

    <RelativeLayout
        android:id="@+id/rl_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/li_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_left_arrow"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/DGrey"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li_search"
            android:text="Upload Vlog"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_28sdp"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_blog">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_102sdp"
                android:layout_height="@dimen/_106sdp"
                android:src="@drawable/blogrightimg"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/_155sdp"/>

            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_135sdp"
                android:src="@drawable/blogleftimg"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"/>

            <ImageView
                android:layout_width="@dimen/_151sdp"
                android:layout_height="@dimen/_153sdp"
                android:src="@drawable/blogleftimg"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_40sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have many yummy choices out there,
                        Help our users decide what to eat. Weâ€™ll monetise your vlog
when a user places an order"
                android:textColor="@color/LGrey"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_200sdp"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



    <TextView
        android:id="@+id/txt_uploadvideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Upload video"
        android:background="@drawable/bg_btn"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"/>

</RelativeLayout>