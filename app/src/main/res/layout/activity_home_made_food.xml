<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeMadeFoodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/li_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/VlightDGrey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">>

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_left_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/DGrey"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_bag_text"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="right" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li_search"
                android:text="Restaurants"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_26sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <EditText
                    android:id="@+id/cv_serch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_search_text"
                    android:hint="Search"
                    android:gravity="center"
                    android:textColorHint="@color/Grey"
                    android:textColor="@color/Grey"
                    android:layout_toLeftOf="@+id/img_filter"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:backgroundTint="@color/VDGrey"
                    android:background="@drawable/bg_edt"/>

                <ImageView
                    android:id="@id/img_filter"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_menu_filter"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_20sdp"/>

            </RelativeLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/li_search">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <HorizontalScrollView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="@dimen/_147sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/ic_coupne"
                            android:scaleType="fitXY"/>

                    <ImageView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_147sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_coupne"
                        android:scaleType="fitXY"/>


                </LinearLayout>
            </HorizontalScrollView>
                <LinearLayout
                    android:id="@+id/li_category"
                    android:layout_below="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categories"
                        android:textColor="@color/LGrey"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:src="@drawable/ic_breakstfast"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:src="@drawable/ic_pizza"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:src="@drawable/ic_seefood"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:src="@drawable/ic_baverage"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:src="@drawable/ic_chicken"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
