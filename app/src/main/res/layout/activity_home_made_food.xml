                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/black"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:src="@drawable/ic_time"
                                        android:layout_gravity="center_vertical" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="15 Min away"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:textSize="@dimen/_13sdp" />

                                    <ImageView
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:src="@drawable/ic_fav_button"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_gravity="center_vertical" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4.5"
                                        android:textSize="@dimen/_11sdp"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:paddingRight="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:backgroundTint="@color/Orangeoriginal"
                                        android:background="@drawable/bg_round"/>



                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_268sdp"
                                android:layout_height="@dimen/_130sdp"
                                android:src="@drawable/ic_burger"
                                android:scaleType="centerCrop"
                                android:background="@drawable/bg_ttl_gradintcorner"
                                android:backgroundTint="@color/VvDGrey"
                                android:adjustViewBounds="true"
                                android:layout_gravity="center_horizontal"/>

                            <LinearLayout
                                android:layout_width="@dimen/_268sdp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/li_bottomcorner"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
